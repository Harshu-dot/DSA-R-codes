# PART C: Estimation & Confidence Intervals (mtcars)
#1: 95% CI for mean mpg
t.test(mtcars$mpg, conf.level=0.95)
#2: bootstrap CI for hp
boot_mean <- function(d, i) mean(d[i])
set.seed(123); bt <- boot(mtcars$hp, boot_mean, R=1000)
